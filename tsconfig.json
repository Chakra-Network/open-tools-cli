{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declarationMap": true
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
